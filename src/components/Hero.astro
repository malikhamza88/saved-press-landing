<section class="min-h-screen flex items-center bg-gradient-to-b from-paper to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="space-y-6">
        <h1 class="text-5xl md:text-6xl font-serif font-bold text-text leading-tight">
          Your Personal Weekly Digest
        </h1>
        <p class="text-xl text-text-secondary">
          Transform your content consumption with Saved Press. Save articles from anywhere, get a beautifully curated weekly newspaper.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="#download"
            class="inline-flex items-center justify-center px-8 py-3 rounded-full text-white bg-primary hover:bg-primary-dark transition-colors"
          >
            Download for iOS
          </a>
          <a
            href="#how-it-works"
            class="inline-flex items-center justify-center px-8 py-3 border border-primary text-primary hover:bg-primary/10 transition-colors rounded-full"
          >
            Learn More
          </a>
        </div>
      </div>

      <div class="relative">
        <div class="relative w-full h-[600px]">
          <div class="absolute inset-0 bg-gradient-to-tr from-primary-light to-accent-light rounded-3xl transform rotate-2"></div>
          <img
  src="app/main.png"
  alt="Saved Press App Interface"
  class="absolute inset-0 w-full h-full object-cover rounded-3xl shadow-2xl transform -rotate-2"
/>
        </div>
      </div>
    </div>
  </div>
</section>