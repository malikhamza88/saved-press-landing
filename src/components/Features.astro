---
const features = [
  {
    icon: 'M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z',
    title: 'Universal Content Saving',
    description: 'Share content from any app directly to Saved Press',
  },
  {
    icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z',
    title: 'Weekly Curation',
    description: 'Get your personalized newspaper every Monday',
  },
  {
    icon: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
    title: 'Beautiful Reading Experience',
    description: 'Enjoy your content in a clean, newspaper-style format',
  },
];
---
<section id="features" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-4xl font-serif font-bold text-text">Everything You Need</h2>
      <p class="mt-4 text-xl text-text-secondary">
        Powerful features to enhance your reading experience
      </p>
    </div>

    <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="relative p-8 bg-paper rounded-2xl hover:shadow-xl transition-all duration-300">
          <div class="absolute top-8 left-8">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-primary"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d={feature.icon}
              />
            </svg>
          </div>
          <div class="mt-12">
            <h3 class="text-xl font-serif font-semibold text-text">{feature.title}</h3>
            <p class="mt-2 text-text-secondary">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>