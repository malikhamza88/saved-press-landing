<nav class="fixed w-full z-50 bg-paper/80 backdrop-blur-md shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex-shrink-0">
        <span class="text-2xl font-serif font-bold text-primary-dark">Saved Press</span>
      </div>

      <div class="hidden md:flex items-center space-x-8">
        <a href="#features" class="text-text hover:text-primary">Features</a>
        <a href="#how-it-works" class="text-text hover:text-primary">How it Works</a>
        <a href="#download" class="bg-primary text-white px-6 py-2 rounded-full hover:bg-primary-dark transition-colors">
          Download Now
        </a>
      </div>

      <button id="menu-btn" class="md:hidden text-text">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-16 6h16"/>
        </svg>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden bg-paper/95 backdrop-blur-md">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="#features" class="block px-3 py-2 text-text hover:text-primary">Features</a>
      <a href="#how-it-works" class="block px-3 py-2 text-text hover:text-primary">How it Works</a>
      <a href="#download" class="block px-3 py-2 bg-primary text-white rounded-full text-center mt-4">
        Download Now
      </a>
    </div>
  </div>
</nav>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>